{
  "name": "gym",
  "description": "Gym for problem solving",
  "version": "0.0.1",
  "publisher": "Nick Lehmann <nick@lehmann.sh>",
  "license": "MIT",
  "engines": {
    "vscode": "^1.73.0"
  },
  "repository": {
    "url": "https://github.com/Microsoft/vscode-extension-samples"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "gym.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "gym.openProblem",
        "title": "Open Problem"
      },
      {
        "command": "gym.downloadProblemInput",
        "title": "Download problem input"
      },
      {
        "command": "gym.list",
        "title": "List problems"
      },
      {
        "command": "problems.refreshEntry",
        "title": "Refresh problems",
        "icon": "$(refresh)"
      },
      {
        "command": "gym.gotoSolution",
        "title": "Goto solution",
        "icon": "$(pencil)"
      },
      {
        "command": "gym.openProblemPage",
        "title": "Open problem page",
        "icon": "$(globe)"
      },
      {
        "command": "gym.openAllSolutionForProblem",
        "title": "Open all solution for a problem",
        "icon": "$(pencil)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "problems",
          "title": "Problems",
          "icon": "assets/school.svg"
        }
      ]
    },
    "views": {
      "problems": [
        {
          "id": "problems",
          "name": "Problems",
          "icon": "assets/school.svg",
          "contextualTitle": "Problem Explorer"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "problems.refreshEntry",
          "when": "view == problems",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "gym.gotoSolution",
          "when": "view == problems && viewItem == solution",
          "group": "inline"
        },
        {
          "command": "gym.openProblemPage",
          "when": "view == problems && viewItem == problem",
          "group": "inline"
        },
        {
          "command": "gym.openAllSolutionForProblem",
          "when": "view == problems && viewItem == problem",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint \"src/**/*.ts\"",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "^16.11.7",
    "@types/node-fetch": "^2.6.3",
    "@types/vscode": "^1.73.0",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "eslint": "^8.26.0",
    "typescript": "^5.0.2"
  },
  "dependencies": {
    "glob": "^9.3.2",
    "node-fetch": "2.0.0",
    "yaml": "^2.2.1",
    "zod": "^3.21.4"
  }
}
